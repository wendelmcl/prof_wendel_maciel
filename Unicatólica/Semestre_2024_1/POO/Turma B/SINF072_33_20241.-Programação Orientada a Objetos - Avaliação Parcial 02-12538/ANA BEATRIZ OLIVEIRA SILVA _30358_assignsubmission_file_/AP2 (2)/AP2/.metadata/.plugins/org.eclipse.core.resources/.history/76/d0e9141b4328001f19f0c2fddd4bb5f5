package q1;
import java.util.ArrayList;
import java.util.Scanner;
public class Execucao {

	public static void main(String[] args) {
		ArrayList<FormaPagamento> fp = new ArrayList<>();
		Scanner sc = new Scanner(System.in);
		CartaoCredito cc = new CartaoCredito();
		
		
		while(true){
			System.out.println("Qual o método de pagamento?");
			System.out.println("CRÉDITO {1}");
			System.out.println("DÉBITO {2}");
			System.out.println("BOLETO {3}");
			System.out.println("DINHEIRO {4}");
			System.out.println("CANCELAR {0}");
			int option = sc.nextInt();
			
			switch(option){
				case 1: //CREDITO
					for(int i = 0; i < fp.size(); i++){
						FormaPagamento c = fp.get(i);
						System.out.println("Digite seu nome no Cartão: ");
						c.setCartaoCredito(sc.next());
						System.out.println("Digite o número do cartão: ");
						cc.setNumeroCartão(sc.nextInt());
					}
					
				case 2: //DEBITO 
					
				case 3: //BOLETO
				
				case 4://DINHEIRO
					
				default:
					System.out.println("Forma de Pagamento Inválida!");
			}
		}
		
		
	}

}
