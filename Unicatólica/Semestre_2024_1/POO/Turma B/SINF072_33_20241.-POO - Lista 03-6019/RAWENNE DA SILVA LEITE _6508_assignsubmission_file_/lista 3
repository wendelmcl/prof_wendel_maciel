import java.util.Scanner;

// Questão 1: Função para converter notação de 24 horas para 12 horas
public static String converterPara12Horas(String horario24) {
    String[] partes = horario24.split(":");
    int hora = Integer.parseInt(partes[0]);
    int minutos = Integer.parseInt(partes[1]);
    String periodo = (hora >= 12) ? "P.M." : "A.M.";
    hora = (hora > 12) ? hora - 12 : hora;
    return hora + ":" + String.format("%02d", minutos) + " " + periodo;
}

// Questão 2: Função para calcular valor a ser pago por uma prestação de uma conta
public static double valorPagamento(double valorPrestacao, int diasAtraso) {
    double valorPago;
    if (diasAtraso > 0) {
        valorPago = valorPrestacao * (1 + 0.03 + (0.001 * diasAtraso));
    } else {
        valorPago = valorPrestacao;
    }
    return valorPago;
}

// Questão 3: Função que retorna a quantidade de dígitos de um número inteiro
public static int contarDigitos(int numero) {
    return String.valueOf(numero).length();
}

// Questão 4: Função que retorna o reverso de um número inteiro
public static int reverterNumero(int numero) {
    int reverso = 0;
    while (numero != 0) {
        reverso = reverso * 10 + numero % 10;
        numero /= 10;
    }
    return reverso;
}

// Questão 5: Implementação do jogo de Craps
public static void jogarCraps() {
    int dado1 = (int) (Math.random() * 6) + 1;
    int dado2 = (int) (Math.random() * 6) + 1;
    int soma = dado1 + dado2;

    System.out.println("Resultado do lançamento dos dados: " + soma);

    if (soma == 7 || soma == 11) {
        System.out.println("Natural! Você ganhou.");
    } else if (soma == 2 || soma == 3 || soma == 12) {
        System.out.println("Craps! Você perdeu.");
    } else {
        int ponto = soma;
        System.out.println("Ponto é " + ponto);
        do {
            dado1 = (int) (Math.random() * 6) + 1;
            dado2 = (int) (Math.random() * 6) + 1;
            soma = dado1 + dado2;
            System.out.println("Resultado do próximo lançamento dos dados: " + soma);
        } while (soma != ponto && soma != 7);
        if (soma == ponto) {
            System.out.println("Você fez o ponto! Você ganhou.");
        } else {
            System.out.println("Você tirou 7 antes de fazer o ponto. Você perdeu.");
        }
    }
}
}